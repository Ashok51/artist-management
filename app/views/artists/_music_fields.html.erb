
<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div class="row align-items-center">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :album_name, class: "form-label" %>
        <%= f.text_field :album_name, class: "form-control", required: true %>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :genre, class: "form-label" %>
        <%= f.select :genre, genre_options_for_select, { prompt: 'Select Genre', selected: selected_music_genre(f.object.genre) }, class: "form-select", required: true %>
      </div>
    </div>

    <div class="col-md-1">
      <div class="form-group">
        <button type="button" data-action="nested-form#remove" class="btn btn-danger btn-sm align-bottom" style="margin-top: 2em;">Remove</button>
        <%= f.hidden_field :_destroy %>
      </div>
    </div>
  </div>
</div>
