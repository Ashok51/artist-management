<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center">Create New User</h2>
      <%= form_for(@added_user, url: added_users_path) do |f| %>
        <div class="row">
          <div class="col-md-6">
            <%= render 'shared/users_and_registrations/user_primary_info', f: f %>
          </div>
          <%= render 'shared/users_and_registrations/user_secondary_info', f: f %>
        </div>

        <div class="mb-3 text-center">
          <%= f.submit "Create User", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
