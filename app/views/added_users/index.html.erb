<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="mt-5 mb-4">All Users</h4>
    </div>
    <div class="col-auto">
      <%= link_to "Add User", new_added_user_path, class: "btn btn-primary float-end me-2" %>
    </div>
  </div>

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Date of Birth</th>
        <th>Gender</th>
        <th>Address</th>
      </tr>
    </thead>
    <tbody>
      <% @added_users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= user.date_of_birth %></td>
          <td><%= user.gender %></td>
          <td><%= user.address %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
